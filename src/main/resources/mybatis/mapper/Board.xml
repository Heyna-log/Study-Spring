<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.board.mapper.BoardMapper">
	<select id="selectList" resultType="com.board.model.Board">
		select * from user
	</select>
	
	<select id="selectData" parameterType="String" resultType="com.board.model.Board">
		select * from user
		where id = #{id}
	</select>
	
	<insert id="insertData" parameterType="com.board.model.Board">
		insert into user (id, pw, name, phone) 
		values (#{id}, #{pw}, #{name}, #{phone})
	</insert>
	
	<update id="updateData" parameterType="com.board.model.Board">
		update user set id = #{id}, pw = #{pw}, name = #{name}, phone = #{phone} 
		where id = #{id}
	</update>
	
	<delete id="deleteData" parameterType="String">
		delete from user where id = #{id}
	</delete>
</mapper>